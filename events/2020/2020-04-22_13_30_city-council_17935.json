      "Version": "",
      "MinutesNote": "\r\n\r\n      \r\n                                                            * * *\r\n\r\n\r\n\r\n\r\n\r\n\r\n     \r\n\r\n\r\n\r\n\r\n\r\n\r\n\r\n\r\n\r\n",
